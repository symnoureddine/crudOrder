{% extends 'base.html.twig' %}

{% block title %}Order
{% endblock %}

{% block body %}
	<h1>Order</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ order.id }}</td>
			</tr>
			<tr>
				<th>Marketplace</th>
				<td>{{ order.marketplace }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>


	<div class="btn-group" role="group" aria-label="Basic example">
		<a href="{{ path('order_index') }}" class="btn btn-outline-primary">Retour à la liste</a>

		<a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-outline-primary">Éditer</a>
		{{ include('order/_delete_form.html.twig') }}
	</div>
{% endblock %}
